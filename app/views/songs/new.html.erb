<h1>Create a new song</h1>

<%= form_for @song do |f| %>

    <% if @song.errors.any? %>
        <h3>There were some errors</h3>
        <ul>
            <% @song.errors.full_messages.each do |error| %>
                <li><%= error %></li>
            <% end %>
        </ul>
    <% end %>
    <%= f.label :title %>
    <%= f.text_field :title %> <br>
    
    <%= f.label :artist_name %>
    <%= f.text_field :artist_name %> <br>
    
    <%= f.label :genre %>
    <%= f.text_field :genre %> <br>

    <%= f.label :released %>
    <%= f.check_box :released %> <br>

    <%= f.label :release_year %>
    <%= f.text_field :release_year %>
    <br><br>

    <%= f.submit "Create Song" %>
<% end %>